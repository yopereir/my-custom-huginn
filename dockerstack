docker run --name huginn_postgres -e POSTGRES_PASSWORD=mysecretpassword -e POSTGRES_USER=huginn -v ${PWD}/data:/var/lib/postgresql/data -d postgres
docker run --rm --name huginn --link huginn_postgres:postgres -p 3000:3000 -e HUGINN_DATABASE_USERNAME=huginn -e HUGINN_DATABASE_PASSWORD=mysecretpassword -e HUGINN_DATABASE_ADAPTER=postgresql huginn/huginn